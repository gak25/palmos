<p id="notice"><%= notice if notice %></p>
<p id="alert"><%= alert if alert %></p>
<div class="row">
  <div class="small-12 columns">
    <h1 class="text-center top-padded">Sign In</h1>
    <%= form_for :session, url: sign_in_path do |f| %>
      <div class="form-inputs">
        <fieldset>
          <%= f.label :email_or_username %>
          <%= f.text_field :login %>
        </fieldset>
        <fieldset>
          <div class="row">
            <div class="small-3 medium-1 columns">
              <%= f.label :password %>
            </div>
            <div class="small-9 medium-11 columns">
              <label>
                <%= link_to "Forgot your password?", new_password_reset_path %>
              </label>
            </div>
          </div>
          <%= f.password_field :password %>
        </fieldset>
        <fieldset>
          <div class="row">
            <div class="small-3 medium-1 columns">
              <div class="switch">
                <%= f.check_box :remember_me, class: "switch-input" %>
                <%= f.label :remember_me, class: "switch-paddle" do %>
                  <span class="show-for-sr">Remember me on this device</span>
                <% end %>
              </div>
            </div>
            <div class="small-9 medium-11 columns">
              Remember me on this device
            </div>
          </div>
        </fieldset>
      </div>
      <div class="form-actions">
        <%= f.submit "Sign In", class: "button" %>
        &nbsp;
        <%= link_to "Sign Up", sign_up_path, class: "button" %>
      </div>
    <% end %>
  </div>
</div>